{
  "name": "caf_launcher",
  "description": "Cloud Assistants application launcher.",
  "version": "0.4.0",
  "author": "Antonio Lain <antlai@cafjs.com>",
    "license": "Apache-2.0",
  "dependencies": {
      "caf_core": "^0.4.0",
      "caf_cli": "^0.4.0",
      "caf_transport": "^0.4.0",
      "react" : "^0.14.0",
      "react-dom" : "^0.14.0",
      "react-bootstrap" : "^0.28.1",
      "redux": "^3.5.0",
      "react-burger-menu": "^2.5.4",
      "keymirror": "^0.1.0"
   },
    "devDependencies": {
        "nodeunit" : ">=0.9",
        "browserify" : "^13.0.0",
        "uglify-es": "^3.3.8"
    },
    "scripts": {
       "start" : "node ./index.js",
        "test": "node ./node_modules/.bin/nodeunit",
        "build-js" : "browserify  -d public/js/main.js -o public/js/build.js",
        "build-min-js" : "export NODE_ENV=production; browserify public/js/main.js | uglifyjs > public/js/build.min.js",
        "build": "yarn run build-js && yarn run build-min-js"
    },
   "main": "index",
  "engines": { "node": ">= 8.0.0" }
}
